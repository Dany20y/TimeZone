@model Time_Zone.Domain.Entities.Product.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Product Details";
}

@if (Model != null)
{
    <div class="product_image_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="product_img_slide owl-carousel">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="single_product_img">
                                <img src="@Url.Content(Model.ImagePath)" alt="Product Image" class="img-fluid">
                            </div>
                        }
                        else
                        {
                            <div class="single_product_img">
                                <img src="@Url.Content("~/images/default-image.jpg")" alt="Default Image" class="img-fluid">
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="single_product_text text-center">
                        <h3>@Model.Name</h3>
                        <p>@Model.Description</p>
                        <div class="card_area">
                            <div class="product_count_area">
                                <p>Quantity</p>
                                <form action="@Url.Action("AddToCart", "Cart")" method="post" class="product_count d-inline-block">
                                    <div class="product_count d-inline-block">
                                        <span class="product_count_item inumber-decrement"> <i class="ti-minus"></i></span>
                                        <input class="product_count_item input-number" type="number" name="quantity" value="1" min="1" max="10">
                                        <span class="product_count_item number-increment"> <i class="ti-plus"></i></span>
                                    </div>
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <p>$@Model.Price</p>
                                    <button type="submit" class="btn btn-primary">Add to cart</button>
                                </form>
                            </div>
                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-info mt-3">@TempData["Message"]</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================End Single Product Area =================-->
}
else
{
    <div class="alert alert-danger">
        <strong>Error:</strong> Product not found.
    </div>
}
