@model IEnumerable<Time_Zone.Domain.Entities.Product.Product>

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .product-card {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .product-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        transform: scale(1);
        transition: transform 0.3s ease-in-out;
    }

    .single-popular-items {
        position: relative;
        border: 1px solid #e0e0e0;
        padding: 15px;
        background-color: #fff;
        transition: transform 0.3s ease-in-out;
    }

        .single-popular-items:hover {
            transform: translateY(-10px);
        }

    .img-cap {
        position: absolute;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: red;
        color: white;
        padding: 10px 20px;
        border-radius: 30px;
        display: none;
    }

    .single-popular-items:hover .img-cap {
        display: block;
    }

    .favorit-items {
        position: absolute;
        top: 10px;
        right: 10px;
        color: #000;
    }

        .favorit-items i {
            font-size: 24px;
        }

    .popular-caption {
        margin-top: 20px;
    }

        .popular-caption h3 a {
            color: #333;
            text-decoration: none;
        }

            .popular-caption h3 a:hover {
                color: red;
            }

        .popular-caption span {
            display: block;
            font-size: 18px;
            color: #999;
        }
</style>

<!-- Latest Products Start -->
<section class="popular-items latest-padding">
    <div class="container">
        <div class="row product-btn justify-content-between mb-40">
            <div class="properties__button">
                <!--Nav Button  -->
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Newest Arrivals</a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Price high to low</a>
                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Most popular</a>
                    </div>
                </nav>
                <!--End Nav Button  -->
            </div>
            <!-- Grid and List view -->
            <div class="grid-list-view">
            </div>
            <!-- Select items -->
            <div class="select-this">
                <form action="#">
                    <div class="select-itms">
                        <select name="select" id="select1">
                            <option value="40">40 per page</option>
                            <option value="50">50 per page</option>
                            <option value="60">60 per page</option>
                            <option value="70">70 per page</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
        <!-- Nav Card -->
        <div class="tab-content" id="nav-tabContent">
            <!-- card one -->
            <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 product-card">
                            <div class="single-popular-items mb-50 text-center">
                                <div class="popular-img">
                                    @if (!string.IsNullOrEmpty(product.ImagePath))
                                    {
                                        <img class="card-img rounded-0 product-image" src="@product.ImagePath" alt="Product Image">
                                    }
                                    else
                                    {
                                        <img class="card-img rounded-0 product-image" src="http://localhost:56271/Images/Products/default-image.jpg" alt="Default Image">
                                    }
                                    <div class="img-cap">
                                        <form action="@Url.Action("AddToCart", "Cart")" method="post">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" style="color: white; background: none; border: none;">Add to cart</button>
                                        </form>
                                    </div>
                                    <div class="favorit-items">
                                        <span class="flaticon-heart"></span>
                                    </div>
                                </div>
                                <div class="popular-caption">
                                    <div class="product">
                                        <h2>@product.Name</h2>
                                        <a href="@Url.Action("ProductDetails", "Home", new { productId = product.Id })" class="btn btn-primary">View Details</a>
                                    </div>
                                    <span>$@product.Price.ToString("0.00")</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- Other Tabs (high to low price, most popular) would be similar to the one above -->
        </div>
        <!-- End Nav Card -->
    </div>
</section>
<!-- Latest Products End -->
<!--? Shop Method Start-->
<div class="shop-method-area">
    <div class="container">
        <div class="method-wrapper">
            <div class="row d-flex justify-content-between">
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single-method mb-40">
                        <i class="ti-package"></i>
                        <h6>Free Shipping Method</h6>
                        <p>Secure shipping with tracking available.</p>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single-method mb-40">
                        <i class="ti-unlock"></i>
                        <h6>Secure Payment System</h6>
                        <p>All transactions are encrypted for your safety.</p>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single-method mb-40">
                        <i class="ti-reload"></i>
                        <h6>Money Back Guarantee</h6>
                        <p>Not satisfied? Get a full refund within 30 days.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shop Method End-->
