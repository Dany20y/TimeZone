<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Time Zone</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Custom CSS -->
    <style>
        .header-area {
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 10px 0;
        }

        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            height: 40px;
        }

        .main-menu ul {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            gap: 20px;
        }

            .main-menu ul li {
                position: relative;
            }

                .main-menu ul li a {
                    text-decoration: none;
                    color: #333;
                    padding: 10px 15px;
                    display: block;
                }

                    .main-menu ul li a:hover,
                    .main-menu ul li a.active {
                        color: #e53e3e;
                    }

        .submenu {
            display: none;
            position: absolute;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 10;
            top: 100%;
            left: 0;
            white-space: nowrap;
        }

            .submenu li a {
                padding: 10px 20px;
            }

        .main-menu ul li:hover .submenu {
            display: block;
        }

        .header-right ul {
            list-style: none;
            display: flex;
            gap: 15px;
            margin: 0;
            padding: 0;
        }

            .header-right ul li a {
                color: #333;
                font-size: 20px;
            }

                .header-right ul li a:hover {
                    color: #e53e3e;
                }
    </style>
</head>
<body>
    <!-- Header Start -->
    <div class="header-area">
        <div class="main-header">
            <div class="container-fluid">
                <div class="menu-wrapper d-flex align-items-center justify-content-between">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="/Home"><img src="/Vendor/assets/img/logo/logo.png" alt="Time Zone Logo"></a>
                    </div>
                    <!-- Main-menu -->
                    <div class="main-menu d-none d-lg-block">
                        <nav>
                            <ul id="navigation">
                                <li><a href="/Home/Index">Home</a></li>
                                <li><a href="/Home/Shop">Shop</a></li>
                                <li><a href="/Home/About">About</a></li>
                                <li class="hot">
                                    <a href="#">Latest</a>
                                    <ul class="submenu">
                                        <li><a href="/Home/Shop">Product list</a></li>
                                        <li><a href="/Home/ProductDetails">Product Details</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="/Home/Blog">Blog</a>
                                    <ul class="submenu">
                                        <li><a href="/Home/Blog">Blog</a></li>
                                        <li><a href="/Home/BlogDetails">Blog Details</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="#">Pages</a>
                                    <ul class="submenu">
                                        <li><a href="/Login/Login">Login</a></li>
                                        <li><a href="/Login/Register">Register</a></li>
                                        <li><a href="/Admin/Admin">Admin</a></li>
                                        <li><a href="/Cart/Index">Cart</a></li>
                                        <li><a href="/Cart/ProductCheckout">Product Checkout</a></li>
                                    </ul>
                                </li>
                                <li><a href="/Home/Contact">Contact</a></li>
                            </ul>
                        </nav>
                    </div>
                    <!-- Header Right -->
                    <div class="header-right">
                        <ul>
                            <li>
                                <div class="nav-search search-switch">
                                    <span class="flaticon-search"></span>
                                </div>
                            </li>
                            <li>
                                <!-- Icona utilizatorului cu modalul de logare/deconectare -->
                                <a href="#" id="userIcon"><span class="flaticon-user"></span></a>
                            </li>
                            <li><a href="/Cart/Index"><span class="flaticon-shopping-cart"></span></a> </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <!-- Modal HTML pentru autentificare/deconectare -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">User Account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Aici va fi conținutul dinamic -->
                    <div id="userStatus">
                        <!-- Aici se vor încărca informațiile despre starea utilizatorului -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Când se face clic pe pictograma de utilizator
            $('#userIcon').on('click', function () {
                // Apelează metoda de verificare a stării autentificării
                $.ajax({
                    url: '@Url.Action("GetUserStatus", "Login")',
                    method: 'GET',
                    success: function (data) {
                        // Încarcă conținutul primit în modală
                        $('#userStatus').html(data);
                        // Afișează fereastra modală
                        $('#loginModal').modal('show');
                    },
                    error: function () {
                        // Afișează un mesaj de eroare în caz de eșec
                        $('#userStatus').html('<p class="text-danger">Error loading user status. Please try again.</p>');
                    }
                });
            });
        });
    </script>
</body>
</html>
